<Window x:Class="Bank.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bank"
        mc:Ignorable="d"
        Title="Банковское приложение" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Личные данные -->
        <GroupBox Grid.Row="0" Grid.Column="0" Header="Личные данные" Padding="10" Margin="0,0,10,10">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="ФИО:" Width="100" VerticalAlignment="Center"/>
                    <TextBox Name="FullNameTextBox" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Паспорт:" Width="100" VerticalAlignment="Center"/>
                    <TextBox Name="PassportTextBox" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="Дата рождения:" Width="100" VerticalAlignment="Center"/>
                    <DatePicker Name="BirthDatePicker" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Открыть счет" Click="OpenAccountButton" Width="120" Margin="0,0,10,0"/>
                    <Button Content="Закрыть счет" Click="CloseAccountButton" Width="120"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Транзакции и операции с счетом -->
        <GroupBox Grid.Row="0" Grid.Column="1" Header="Транзакции" Padding="10" Margin="0,0,0,10">
            <!-- Транзакции -->
            <StackPanel>
                <ComboBox Name="TransactionTypeComboBox" SelectionChanged="TransactionTypeComboBox_SelectionChanged" Margin="0,0,0,10"
                          SelectedIndex="0">
                    <ComboBoxItem Content="Пополнение"/>
                    <ComboBoxItem Content="Снятие"/>
                    <ComboBoxItem Content="Перевод"/>
                </ComboBox>
                <TextBox Name="OutputTransactionTextBox" IsReadOnly="True" Height="120" TextWrapping="Wrap"/>
                
                <!-- Операции с счетом -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Сумма:" Width="60" VerticalAlignment="Center"/>
                    <TextBox Name="AmountTextBox" Width="150"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Пополнить" Click="DepositButton" Width="100" Margin="0,0,5,0"/>
                    <Button Content="Снять" Click="WithdrawButton" Width="100" Margin="0,0,5,0"/>
                    <Button Content="Перевести" Click="TransferButton" Width="100"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Пользователи -->
        <GroupBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Header="Информация о пользователях" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Пользователь 1 -->
                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                    <TextBlock Text="Пользователь 1" Margin="0,0,0,5"/>
                    <ComboBox Name="UserComboBox" SelectionChanged="UserComboBox_SelectionChanged" 
                              Width="200" Margin="0,0,0,10">
                        <ComboBoxItem Content="User 1" IsSelected="True"/>
                    </ComboBox>
                    <TextBox Name="OutputUserTextBox" IsReadOnly="True" 
                             TextWrapping="Wrap" Height="180" VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
                
                <!-- Пользователь 2 -->
                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                    <TextBlock Text="Пользователь 2" Margin="0,0,0,5"/>
                    <ComboBox Name="UserComboBox2" SelectionChanged="UserComboBox2_SelectionChanged" 
                              Width="200" Margin="0,0,0,10">
                        <ComboBoxItem Content="User 2" IsSelected="True"/>
                    </ComboBox>
                    <TextBox Name="OutputUserTextBox2" IsReadOnly="True" 
                             TextWrapping="Wrap" Height="180" VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>